{
  "name": "@lasalefamine/create-app",
  "version": "1.0.2",
  "description": "Opinionated app generator",
  "keywords": [
    "generator",
    "web",
    "app",
    "next.js",
    "react",
    "typescript",
    "boilerplate",
    "starter"
  ],
  "license": "MIT",
  "repository": "LasaleFamine/create-app",
  "author": {
    "name": "Alessio Occhipinti",
    "email": "info@godev.space",
    "url": "https://godev.space"
  },
  "scripts": {
    "dev": "ts-node src/cli.ts",
    "build": "rimraf dist && tsc",
    "prepack": "yarn build",
    "test": "tsc --noEmit --sourceMap && eslint src/*.ts",
    "release": "git pull && standard-version && git push --follow-tags"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint"
  },
  "engines": {
    "node": ">= 14"
  },
  "type": "module",
  "dependencies": {
    "chalk": "4.1.1",
    "cpy": "8.1.2",
    "empty-dir": "2.0.0",
    "make-dir": "3.1.0",
    "meow": "10.0.0",
    "ora": "5.4.0",
    "pkg-install": "1.0.0",
    "prompts": "2.4.1",
    "read-pkg-up": "8.0.0",
    "rimraf": "3.0.2",
    "update-notifier": "5.1.0",
    "validate-npm-package-name": "3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@lasalefamine/eslint-config": "1.0.0",
    "@lasalefamine/eslint-config-base": "1.0.0",
    "@lasalefamine/tsconfig": "0.1.0",
    "@types/chalk": "2.2.0",
    "@types/empty-dir": "2.0.0",
    "@types/node": "15.6.2",
    "@types/prompts": "2.0.12",
    "@types/rimraf": "3.0.0",
    "@types/update-notifier": "5.0.0",
    "@types/validate-npm-package-name": "3.0.2",
    "@typescript-eslint/eslint-plugin": "4.26.0",
    "@typescript-eslint/parser": "4.26.0",
    "ava": "3.15.0",
    "eslint": "7.27.0",
    "eslint-plugin-import": "2.23.4",
    "husky": "4.3.0",
    "lint-staged": "11.0.0",
    "nyc": "15.1.0",
    "standard-version": "9.3.0",
    "ts-node": "10.0.0",
    "typescript": "4.3.2"
  },
  "files": [
    "dist",
    "templates",
    "!*.test.*"
  ],
  "exports": "./dist",
  "bin": {
    "lf-create-app": "./dist/cli.js"
  },
  "nyc": {
    "all": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "dist",
      "src"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.test.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
